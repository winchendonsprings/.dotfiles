! XTerm settings
XTerm*background:   #030303
XTerm*foreground:   #E6E6E6
XTerm*cursorColor:  #B1DD7F
XTerm*faceSize:     10
Xterm*faceName:	   Ubuntu\ Mono:pixelsize=10 



! URXVT - Settings
!load scripts
!URxvt.perl-lib: /home/ry/.urxvt/urxvt-perls/
URxvt*saveline: 15000
!URxvt*termName: rxvt-256color
URxvt*termName: urxvt
URxvt*iso14755: false
URxvt*iconFile: /usr/share/icons/Faience/apps/scalable/utilities-terminal.svg

!keyboard select
!is the ... needed?
!URxvt.perl-ext-common: ...,clipboard,default,keyboard-select,matcher,url-select
!URxvt.perl-ext-common: default,clipboard,keyboard-select,matcher,url-select
!URxvt.keysym.M-Escape: perl:keyboard-select:activate
!url-select
!URxvt.keysym.M-u: perl:url-select:select_next
!clipboard
!URxvt.keysym.M-c:   perl:clipboard:copy
!URxvt.keysym.M-v:   perl:clipboard:paste
!URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
!clickable urls
!URxvt.url-launcher: /usr/bin/firefox
!URxvt.matcher.button: 1
!yankable urls
!URxvt.perl-ext:      default,url-select
!URxvt.keysym.M-u:    perl:url-select:select_next
!URxvt.url-select.launcher:   /usr/bin/firefox -new-tab
!URxvt.url-select.underline: true
!Next three lines make ocopy and paste with keyboard doable
!URxvt.keysym.Shift-Control-V: perl:clipboard:paste

! appearance
URxvt.geometry: 92x56
URxvt.letterSpace: -1
URxvt.lineSpace: 0
URxvt*depth: 32
!URxvt*background: rgba:0000/0000/0000/DDDD
!URxvt*foreground: AntiqueWhite
URxvt*background: #333333
URxvt*foreground: #eeeeee
URxvt.underlineColor: Yellow
URxvt.highlightColor: Orange
URxvt.throughColor: Blue
URxvt*cursorColor: White
URxvt*cursorColor2: Black
URxvt*scrollBar: false
URxvt*scrollBar_right: false
URxvt*internalBorder: 4
URxvt*externalBorder: 0
URxvt*borderLess: false

! colors
URxvt*color0: #2e3436
URxvt*color1: #cc0000
URxvt*color2: #4e9a06
URxvt*color3: #c4a000
URxvt*color4: #3465a4
URxvt*color5: #75507b
URxvt*color6: #0b939b
URxvt*color7: #d3d7cf
URxvt*color8: #555753
URxvt*color9: #ef2929
URxvt*color10: #8ae234
URxvt*color11: #fce94f
URxvt*color12: #729fcf
URxvt*color13: #ad7fa8
URxvt*color14: #00f5e9
URxvt*color15: #eeeeec

! Xft settings ----------------------------
Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight
